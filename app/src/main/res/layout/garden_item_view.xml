<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="5dp"
    app:cardBackgroundColor="@color/colorT"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryT"

        >
        <TextView
            android:id="@+id/garden_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBrown"
            android:textSize="16sp"
            tools:text="garden name"
            android:paddingHorizontal="@dimen/layout_padding"
            android:paddingTop="16dp"
            android:layout_alignParentTop="true"

            android:letterSpacing=".05"
            android:background="@drawable/roundedshapebrown"
            android:backgroundTint="#f1afdcc1"
            android:drawableBottom="@drawable/roundedshapebrownsolid"
            android:drawablePadding="4dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/layout_padding"
            android:paddingVertical="8dp"
           >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">


            <TextView
                android:id="@+id/neighborhood_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/garden_name_textview"
                android:onClick="onToggleFlower"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="16sp"
                tools:text="neighborhood" />

            <TextView
                android:id="@+id/borough_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/neighborhood_textview"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"
                tools:text="borough" />



        </LinearLayout>
            <Button
                android:id="@+id/add_to_faves_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_filter_vintage_black_24dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="@dimen/layout_padding"/>
        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>