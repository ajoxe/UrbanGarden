<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context="com.example.android.urbangarden.GardenDetailActivity">

    <ImageView
        android:id="@+id/gardenImage"
        android:layout_width="145dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/garden" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gardenName"
        android:gravity="center"
        android:text="Sample Name"
        android:textSize="22dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gardenAddress"
            android:text="Address of Garden to be put here"
            android:gravity="center"
            android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find on Map"
        android:layout_gravity="center"
        android:id="@+id/mapButton"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="18dp"
        android:text="Hours of Operation: \n 10:00AM - 7:00PM \n Monday - Fridays \n 11:00AM - 8:00 PM \n Saturday and Sunday"
        />


    <ImageButton
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/favoriteButtonImg"
        android:src="@drawable/heart"
        android:paddingLeft="25dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faveText"
        android:gravity="center"
        android:text="Add to Favorites"
        android:paddingTop="10dp"/>


</LinearLayout>
